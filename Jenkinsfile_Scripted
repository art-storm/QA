node {

    def imagename = getImageName(BRANCH_NAME)
    def registryProvider = 'http://crappjavatest.azurecr.io'
    def registryCredential = 'azure-container-registry'
    def dockerImage = ''
    def environment = getEnvironment(BRANCH_NAME)

    stage('Clone sources') {
        echo 'Clone branch ' + BRANCH_NAME
        checkout scm
    }

    stage('Build') {
        sh 'mvn -B -DskipTests clean package'
    }

    try {
        stage('Test') {
            sh 'mvn test'
        }
    } catch (e) {
        println $e
    } finally {
        junit 'target/surefire-reports/*.xml'
    }

}

def getImageName(branch = 'dev') {
    def imagename = "crappjavatest/dev-app-java"
    if (branch == 'release') {
        imagename = "crappjavatest/rc-app-java"
    }

    return imagename
}

def getEnvironment(branch = 'dev') {
    def env = "dev"
    if (branch == 'release') {
        env = "staging"
    }

    return env
}
